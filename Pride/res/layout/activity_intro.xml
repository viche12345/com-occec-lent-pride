<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/devoHeaderLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color" >

        <TextView
            android:id="@id/introIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/white_circle"
            android:gravity="center"
            android:text="i"
            android:textColor="@android:color/white"
            android:textSize="50.0sp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/introIcon"
            android:text="@string/preface"
            android:textColor="#ffffffff"
            android:textSize="24.0sp"
            android:typeface="monospace" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <TextView
                android:id="@id/textViewPreface"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:layout_marginTop="8.0dip"
                android:background="#ffcdcdcd"
                android:padding="16.0dip"
                android:text="@string/preface_body"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:text="@string/preface_part1"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@id/textViewPrefacePart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:text="@string/preface_part2"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@id/textViewPrefacePart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:text="@string/guidelines"
                android:textAppearance="?android:textAppearanceLarge" />

            <TextView
                android:id="@id/textViewGuidelines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:text="@string/credits"
                android:textAppearance="?android:textAppearanceLarge" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:src="@drawable/glittering_vices_cover" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8.0dip"
                android:gravity="center"
                android:text="@string/credit_caption" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip"
                android:text="\nThis app would not have been possible without the beautiful and masterfully crafted booklet and iconography. Shout outs to Minister Ken Hsu, Pastor John Harris, and Andrew Tai. Thank you all for continually blessing our community in so many ways!" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>